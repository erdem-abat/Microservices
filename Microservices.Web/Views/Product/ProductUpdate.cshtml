@model ProductDto
@{
    ViewData["Title"] = "ProductUpdate";
}

<h1>ProductUpdate</h1>

<form method="post" action="ProductUpdate" enctype="multipart/form-data">
    <input type="hidden" name="productId" asp-for="ProductId" />
    <hr />
    <div class="row">
        <div class="col-10">
            <div class="row">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Image" class="form-control" />
                    <input asp-for="ImageUrl" hidden class="form-control" />
                    <input asp-for="ImageLocalPath" hidden class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryName"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
        <div class="col-2">
            <img src="@Model.ImageUrl" class="w-100" alt="" />
        </div>
    </div>
</form>
